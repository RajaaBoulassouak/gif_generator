<h1>Gif's</h1>
<% if current_admin? %>
  <%= link_to 'Add New Gif', new_admin_gif_path %>
<% end %>

<% @gifs.each do |gif| %>
  <%= link_to image_tag(gif.image_url), gif_path(gif)%>
  <% if current_admin? %>
      <%= link_to 'Delete', admin_gif_path(gif), method: 'delete' %>
  <% end %>
    <% if current_user %>
      <%= form_tag user_path(current_user) do %>
        <%= hidden_field_tag :user_id, current_user.id %>
        <%= hidden_field_tag :gif_id, gif.id  %>
        <%= submit_tag "Add To Favorites" %>
      <% end %>
    <% end %>
<% end %>
